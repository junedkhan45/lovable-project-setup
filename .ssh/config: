# GitHub Business Account SSH Configuration
# This configuration provides secure SSH access to GitHub for business repositories

Host github.com-business
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519_business
  
  # Security settings
  IdentitiesOnly yes                    # Only use the specified identity file
  StrictHostKeyChecking yes             # Verify host keys for security
  UserKnownHostsFile ~/.ssh/known_hosts # Use custom known hosts file
  
  # Connection settings
  ConnectTimeout 30                     # 30 second connection timeout
  ServerAliveInterval 60                # Send keepalive every 60 seconds
  ServerAliveCountMax 3                 # Maximum of 3 keepalive attempts
  
  # Performance optimizations
  Compression yes                       # Enable compression for faster transfers
  ControlMaster auto                    # Enable connection sharing
  ControlPath ~/.ssh/control-%r@%h:%p   # Control socket path
  ControlPersist 10m                    # Keep master connection open for 10 minutes
  
  # Logging and debugging (uncomment if needed)
  # LogLevel INFO
  # PreferredAuthentications publickey

# Optional: Add backup configuration for redundancy
# Host github.com-business-backup
#   HostName ssh.github.com
#   User git
#   IdentityFile ~/.ssh/id_ed25519_business
#   Port 443

